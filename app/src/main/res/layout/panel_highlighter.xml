<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:singleSelection="true"
        app:selectionRequired="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHlFreeform"
            style="@style/Widget.Material3.Button.IconButton.Outlined"
            app:icon="@drawable/ic_highlight_freeform"
            android:contentDescription="Freeform" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHlStraight"
            style="@style/Widget.Material3.Button.IconButton.Outlined"
            app:icon="@drawable/ic_highlight_straight"
            android:contentDescription="Straight line" />
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <com.google.android.material.slider.Slider
        android:id="@+id/sliderHighlightSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:value="24"
        android:valueFrom="8"
        android:valueTo="100"
        android:stepSize="1" />

    <com.google.android.material.slider.Slider
        android:id="@+id/sliderHighlightOpacity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:value="50"
        android:valueFrom="0"
        android:valueTo="100"
        android:stepSize="1" />
</LinearLayout>
