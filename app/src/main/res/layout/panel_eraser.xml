<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/eraserModeGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:singleSelection="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEraserStroke"
            style="?attr/materialButtonOutlinedStyle"
            android:text="Stroke eraser" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEraserArea"
            style="?attr/materialButtonOutlinedStyle"
            android:text="Area eraser" />
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size"
        android:layout_marginTop="12dp" />

    <com.google.android.material.slider.Slider
        android:id="@+id/sliderEraserSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:valueFrom="8"
        app:valueTo="60"
        app:stepSize="1" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchEraseHighlightsOnly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Erase highlighter only"
        android:layout_marginTop="12dp" />

    <!-- Live preview dot (size changed by code) -->
    <View
        android:id="@+id/eraserPreview"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
