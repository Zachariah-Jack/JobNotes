<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/selectModeGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        app:singleSelection="true"
        app:selectionRequired="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSelectLasso"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            app:icon="@drawable/ic_tool_select_lasso"
            app:iconTint="@android:color/black"
            app:iconSize="24dp"
            app:iconPadding="0dp"
            android:contentDescription="Lasso" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSelectRect"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_tool_select_rect"
            app:iconTint="@android:color/black"
            app:iconSize="24dp"
            app:iconPadding="0dp"
            android:contentDescription="Rectangle" />
    </com.google.android.material.button.MaterialButtonToggleGroup>
</LinearLayout>
