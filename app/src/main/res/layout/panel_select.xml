<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/selectModeGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:singleSelection="true"
        app:selectionRequired="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSelectRect"
            style="@style/Widget.Material3.Button.IconButton.Outlined"
            app:icon="@drawable/ic_tool_select_rect"
            android:contentDescription="Rectangle select" />

        <!-- Reuse freeform icon for lasso if you don't have a lasso asset -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSelectLasso"
            style="@style/Widget.Material3.Button.IconButton.Outlined"
            app:icon="@drawable/ic_highlight_freeform"
            android:contentDescription="Lasso select" />
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSelectClear"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_marginTop="8dp"
        android:text="Clear selection"/>
</LinearLayout>
