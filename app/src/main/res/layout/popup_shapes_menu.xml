<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/bg_card_popup"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!-- Row of shape icons -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btnShapeRect"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_shape_rect"
            android:contentDescription="@null"/>

        <ImageButton
            android:id="@+id/btnShapeTriEq"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_shape_triangle_eq"
            android:contentDescription="@null"/>

        <ImageButton
            android:id="@+id/btnShapeTriRight"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_shape_triangle_right"
            android:contentDescription="@null"/>

        <ImageButton
            android:id="@+id/btnShapeCircle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_shape_circle"
            android:contentDescription="@null"/>

        <ImageButton
            android:id="@+id/btnShapeArc"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_shape_arc"
            android:contentDescription="@null"/>

        <ImageButton
            android:id="@+id/btnShapeLine"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_shape_line"
            android:contentDescription="@null"/>
    </LinearLayout>

    <!-- Stroke thickness -->
    <TextView
        android:layout_marginTop="8dp"
        android:text="@string/stroke"
        android:textSize="12sp"
        android:textColor="#666"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <SeekBar
        android:id="@+id/seekShapeStroke"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:max="48"
        android:progress="6"/>
    <!-- Stroke & Fill color row -->
    <LinearLayout
        android:id="@+id/rowShapeColors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp">

        <ImageButton
            android:id="@+id/chipShapeStrokeColor"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/bg_color_chip_selector"
            android:padding="6dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_tool_color" />

        <ImageButton
            android:id="@+id/chipShapeFillColor"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_color_chip_selector"
            android:padding="6dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_tool_color" />
    </LinearLayout>


    <!-- Fill toggle -->
    <CheckBox
        android:id="@+id/chkNoFill"
        android:layout_marginTop="6dp"
        android:text="@string/no_fill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
