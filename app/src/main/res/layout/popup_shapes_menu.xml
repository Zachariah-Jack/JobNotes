<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!-- Row of shape icon buttons -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btnShapeRect"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:src="@drawable/ic_shape_rect"
            android:contentDescription="@null"/>

        <ImageButton
            android:id="@+id/btnShapeTriEq"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:src="@drawable/ic_shape_triangle_eq"
            android:contentDescription="@null"/>

        <ImageButton
            android:id="@+id/btnShapeTriRight"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:src="@drawable/ic_shape_triangle_right"
            android:contentDescription="@null"/>

        <ImageButton
            android:id="@+id/btnShapeCircle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:src="@drawable/ic_shape_circle"
            android:contentDescription="@null"/>

        <ImageButton
            android:id="@+id/btnShapeArc"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:src="@drawable/ic_shape_arc"
            android:contentDescription="@null"/>

        <ImageButton
            android:id="@+id/btnShapeLine"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:src="@drawable/ic_shape_line"
            android:contentDescription="@null"/>
    </LinearLayout>

    <!-- Stroke thickness -->
    <TextView
        android:id="@+id/shapeStrokeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thickness"
        android:textSize="12sp"
        android:layout_marginTop="8dp"/>

    <SeekBar
        android:id="@+id/seekShapeStroke"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:max="48"
        android:progress="6"/>

    <!-- No Fill toggle -->
    <CheckBox
        android:id="@+id/chkNoFill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No fill"
        android:checked="true"
        android:layout_marginTop="6dp"/>
</LinearLayout>
