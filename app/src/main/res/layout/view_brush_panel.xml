<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="12dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/groupBrushType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBrushPen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pen" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBrushHigh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/highlighter" />
        </com.google.android.material.button.MaterialButtonToggleGroup>

        <!-- Size presets -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSz1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_2" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSz2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_4" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSz3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_6" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSz4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_8" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSz5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_12" />
        </LinearLayout>

        <!-- Ink slider -->
        <com.google.android.material.slider.Slider
            android:id="@+id/sliderInk"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:value="6"
            android:valueFrom="1"
            android:valueTo="48" />

        <!-- Eraser slider -->
        <com.google.android.material.slider.Slider
            android:id="@+id/sliderEraser"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:value="24"
            android:valueFrom="8"
            android:valueTo="64" />

        <!-- Colors -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnColor1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/blank" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnColor2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/blank" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnColor3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/blank" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnColor4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/blank" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnColor5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/blank" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnColor6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/blank" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnColor7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/blank" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnColorMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/more" />
        </LinearLayout>

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/switchEraseByStroke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/erase_by_stroke" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/switchStylusOnly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stylus_only" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
