<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <!-- Brush buttons row -->
    <LinearLayout
        android:id="@+id/brushRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/iconFountain"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/cd_brush_fountain"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_brush_fountain" />

        <ImageButton
            android:id="@+id/iconCalligraphy"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/cd_brush_calligraphy"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_brush_calligraphy" />

        <ImageButton
            android:id="@+id/iconPen"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/cd_brush_pen"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_brush_pen" />

        <ImageButton
            android:id="@+id/iconPencil"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/cd_brush_pencil"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_brush_pencil" />

        <ImageButton
            android:id="@+id/iconMarker"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/cd_brush_marker"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_brush_marker" />
    </LinearLayout>

    <!-- Size slider row -->
    <LinearLayout
        android:id="@+id/sizeRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <SeekBar
            android:id="@+id/sizeSlider"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="60"
            android:progress="4"
            android:contentDescription="@string/cd_brush_size" />

        <TextView
            android:id="@+id/sizeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="4 dp" />
    </LinearLayout>

    <!-- Live brush preview -->
    <com.pelicankb.jobnotes.ui.BrushPreviewView
        android:id="@+id/brushPreview"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="12dp"
        android:contentDescription="@string/cd_brush_preview" />

</LinearLayout>
