<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popupStylusRoot"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- Top row: Fountain / Calligraphy / Pen / Pencil / Marker -->
    <LinearLayout
        android:id="@+id/rowTools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/iconFountain"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_tool_toggle"
            android:src="@drawable/ic_brush_fountain"
            android:contentDescription="@string/cd_brush_preview" />

        <ImageButton
            android:id="@+id/iconCalligraphy"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_tool_toggle"
            android:src="@drawable/ic_brush_calligraphy"
            android:contentDescription="@string/cd_brush_preview" />

        <ImageButton
            android:id="@+id/iconPen"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_tool_toggle"
            android:src="@drawable/ic_brush_pen"
            android:contentDescription="@string/cd_brush_preview" />

        <ImageButton
            android:id="@+id/iconPencil"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_tool_toggle"
            android:src="@drawable/ic_brush_pencil"
            android:contentDescription="@string/cd_brush_preview" />

        <ImageButton
            android:id="@+id/iconMarker"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_tool_toggle"
            android:src="@drawable/ic_brush_marker"
            android:contentDescription="@string/cd_brush_preview" />
    </LinearLayout>

    <!-- Size slider row -->
    <LinearLayout
        android:id="@+id/rowSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp">

        <SeekBar
            android:id="@+id/sizeSlider"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:max="60" />

        <TextView
            android:id="@+id/sizeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/size_dp" />
    </LinearLayout>

    <!-- Live brush preview -->
    <com.pelicankb.jobnotes.ui.BrushPreviewView
        android:id="@+id/brushPreview"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="6dp" />

    <!-- Stroke Style -->
    <TextView
        android:id="@+id/labelStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stroke_style"
        android:textStyle="bold"
        android:layout_marginTop="10dp" />

    <RadioGroup
        android:id="@+id/rgStrokeStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbStyleSolid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/solid"
            android:checked="true" />

        <RadioButton
            android:id="@+id/rbStyleDashed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dashed"
            android:layout_marginStart="12dp" />

        <RadioButton
            android:id="@+id/rbStyleDotted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dotted"
            android:layout_marginStart="12dp" />
    </RadioGroup>

    <!-- Arrow Ends -->
    <CheckBox
        android:id="@+id/cbArrowEnds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/arrow_ends"
        android:layout_marginTop="6dp" />
</LinearLayout>
