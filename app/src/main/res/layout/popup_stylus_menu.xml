<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <!-- Selection width: shows only when a selection exists -->
    <LinearLayout
        android:id="@+id/selWidthRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/selWidthTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selection width"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:paddingBottom="4dp" />

        <!-- Relative step row -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnDeltaN10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-10" />

            <Button
                android:id="@+id/btnDeltaN1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-1"
                android:layout_marginStart="6dp" />

            <Button
                android:id="@+id/btnDeltaP1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+1"
                android:layout_marginStart="6dp" />

            <Button
                android:id="@+id/btnDeltaP10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+10"
                android:layout_marginStart="6dp" />
        </LinearLayout>

        <!-- Absolute normalize slider -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="6dp">

            <SeekBar
                android:id="@+id/seekSelNormalize"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="120" />

            <TextView
                android:id="@+id/selNormalizeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€” dp"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>



    <!-- Brush buttons row -->
    <LinearLayout
        android:id="@+id/brushRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/iconFountain"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/bg_tool_toggle"
            android:contentDescription="@string/cd_brush_fountain"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_brush_fountain" />

        <ImageButton
            android:id="@+id/iconCalligraphy"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/bg_tool_toggle"
            android:contentDescription="@string/cd_brush_calligraphy"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_brush_calligraphy" />

        <ImageButton
            android:id="@+id/iconPen"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/bg_tool_toggle"
            android:contentDescription="@string/cd_brush_pen"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_brush_pen" />

        <ImageButton
            android:id="@+id/iconPencil"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/bg_tool_toggle"
            android:contentDescription="@string/cd_brush_pencil"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_brush_pencil" />

        <ImageButton
            android:id="@+id/iconMarker"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_tool_toggle"
            android:contentDescription="@string/cd_brush_marker"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_brush_marker" />
    </LinearLayout>

    <!-- Size slider row -->
    <LinearLayout
        android:id="@+id/sizeRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <SeekBar
            android:id="@+id/sizeSlider"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="60"
            android:progress="4"
            android:contentDescription="@string/cd_brush_size" />

        <TextView
            android:id="@+id/sizeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/default_pen_size_value" />
    </LinearLayout>

    <!-- Live brush preview -->
    <com.pelicankb.jobnotes.ui.BrushPreviewView
        android:id="@+id/brushPreview"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="12dp"
        android:contentDescription="@string/cd_brush_preview" />

</LinearLayout>
