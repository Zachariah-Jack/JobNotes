<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootSelectMenu"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- Row: selection mode -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <ImageButton
            android:id="@+id/iconSelectLasso"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_tool_toggle"
            android:padding="8dp"
            android:src="@drawable/ic_tool_select_lasso"
            android:tint="@android:color/black"
            android:contentDescription="@null" />

        <ImageButton
            android:id="@+id/iconSelectRect"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_tool_toggle"
            android:padding="8dp"
            android:layout_marginStart="6dp"
            android:src="@drawable/ic_tool_select_rect"
            android:tint="@android:color/black"
            android:contentDescription="@null" />
    </LinearLayout>

    <!-- Actions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSelectClear"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Clear" />

        <Button
            android:id="@+id/btnSelectDelete"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Delete" />
    </LinearLayout>

</LinearLayout>
