<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/textPopupRoot"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <!-- Bold / Italic -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/chkBold"
            android:text="Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:id="@+id/chkItalic"
            android:text="Italic"
            android:layout_marginStart="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Text colors: 3 round chips (tap opens palette) -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Text"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/rowTextColors"
            android:orientation="horizontal"
            android:layout_marginStart="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton android:id="@+id/chipTxt1" android:layout_width="28dp" android:layout_height="28dp"
                android:background="@drawable/bg_color_chip_selector"
                android:src="@drawable/ic_tool_color"
                android:padding="0dp"
                android:layout_marginEnd="10dp"
                android:contentDescription="@string/app_name"/>

            <ImageButton android:id="@+id/chipTxt2" android:layout_width="28dp" android:layout_height="28dp"
                android:background="@drawable/bg_color_chip_selector"
                android:src="@drawable/ic_tool_color"
                android:padding="0dp"
                android:layout_marginEnd="10dp"
                android:contentDescription="@string/app_name"/>

            <ImageButton android:id="@+id/chipTxt3" android:layout_width="28dp" android:layout_height="28dp"
                android:background="@drawable/bg_color_chip_selector"
                android:src="@drawable/ic_tool_color"
                android:padding="0dp"
                android:layout_marginEnd="10dp"
                android:contentDescription="@string/app_name"/>

        </LinearLayout>
    </LinearLayout>

    <!-- Fill: None + 3 round chips (tap opens palette) -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Fill"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/rowBgColors"
            android:orientation="horizontal"
            android:layout_marginStart="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/chipBgNone"
                android:text="None"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:layout_marginEnd="10dp"
                android:background="#DDDDDD"
                android:tag="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageButton
                android:id="@+id/chipBg1"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/bg_color_chip_selector"
                android:src="@drawable/ic_tool_color"
                android:tint="#FFFFFFFF"           <!-- White -->
            android:tag="#FFFFFFFF"
            android:padding="0dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/app_name"/>

            <ImageButton
                android:id="@+id/chipBg2"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/bg_color_chip_selector"
                android:src="@drawable/ic_tool_color"
                android:tint="#FFF8E1"             <!-- Light Cream 50 -->
            android:tag="#FFF8E1"
            android:padding="0dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/app_name"/>

            <ImageButton
                android:id="@+id/chipBg3"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/bg_color_chip_selector"
                android:src="@drawable/ic_tool_color"
                android:tint="#E3F2FD"             <!-- Light Blue 50 -->
            android:tag="#E3F2FD"
            android:padding="0dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/app_name"/>


        </LinearLayout>
    </LinearLayout>

    <!-- Corner radius -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Radius"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <SeekBar
            android:id="@+id/cornerSeek"
            android:layout_marginStart="12dp"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:max="32"/>
        <TextView
            android:id="@+id/cornerLabel"
            android:text="0dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Size slider AT BOTTOM -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Size"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <SeekBar
            android:id="@+id/sizeSeek"
            android:layout_marginStart="12dp"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:max="64"/>
        <TextView
            android:id="@+id/sizeLabel"
            android:text="18sp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Pelican preview UNDER the size slider -->
    <TextView
        android:id="@+id/previewText"
        android:text="Pelican"
        android:textSize="18sp"
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
