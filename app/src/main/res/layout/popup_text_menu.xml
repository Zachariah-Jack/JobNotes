<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popupTextRoot"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">

    <LinearLayout
        android:id="@+id/rowSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/previewPelican"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pelican"
            android:layout_marginTop="4dp"/>


        <SeekBar
            android:id="@+id/seekTextSize"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:max="96" />

        <TextView
            android:id="@+id/labelTextSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/size_dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rowStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <CheckBox
            android:id="@+id/cbBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bold" />

        <CheckBox
            android:id="@+id/cbItalic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/italic" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rowInsert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btnTextColor"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_tool_toggle"
            android:src="@drawable/ic_tool_color"
            android:contentDescription="@string/cd_brush_preview" />

        <Button
            android:id="@+id/btnInsertText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/insert_text"
            android:layout_marginStart="12dp" />
    </LinearLayout>
</LinearLayout>
