<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Icon toolbar (ImageButtons; icons set in code so you can keep your own drawables) -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/toolbarRow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/ibPen"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Pen" />

            <ImageButton
                android:id="@+id/ibHighlighter"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Highlighter" />

            <ImageButton
                android:id="@+id/ibEraser"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Eraser" />

            <ImageButton
                android:id="@+id/ibSelect"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Select" />

            <Space android:layout_width="12dp" android:layout_height="0dp" />

            <ImageButton
                android:id="@+id/ibUndo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Undo" />

            <ImageButton
                android:id="@+id/ibRedo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Redo" />

            <ImageButton
                android:id="@+id/ibClear"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Clear page" />

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Brush/highlighter/eraser settings (kept IDs from your older code) -->
    <LinearLayout
        android:id="@+id/panelText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#11CCCCCC">

        <LinearLayout
            android:id="@+id/panelFontSize"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pen size" />

            <SeekBar
                android:id="@+id/seekPenSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Highlighter size" />

            <SeekBar
                android:id="@+id/seekHighlighterSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eraser size" />

            <SeekBar
                android:id="@+id/seekEraserSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Quick color swatches -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="8dp">

            <View
                android:id="@+id/btnColorBlack"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_margin="4dp"
                android:background="#000000" />

            <View
                android:id="@+id/btnColorBlue"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_margin="4dp"
                android:background="#1976D2" />

            <View
                android:id="@+id/btnColorRed"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_margin="4dp"
                android:background="#D32F2F" />

            <View
                android:id="@+id/btnColorYellow"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_margin="4dp"
                android:background="#FFFF00" />
        </LinearLayout>
    </LinearLayout>

    <!-- Selection controls (icons only) -->
    <LinearLayout
        android:id="@+id/panelSelect"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#112196F3"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/ibRect"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Rect selection" />

        <ImageButton
            android:id="@+id/ibLasso"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Lasso selection" />

        <Space android:layout_width="12dp" android:layout_height="0dp" />

        <ImageButton
            android:id="@+id/ibSelClear"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Clear selection" />

        <ImageButton
            android:id="@+id/ibSelDelete"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Delete selection" />
    </LinearLayout>

    <!-- Canvas -->
    <FrameLayout
        android:id="@+id/canvasHost"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.pelicankb.jobnotes.NoteCanvasView
            android:id="@+id/noteCanvas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFFFF" />
    </FrameLayout>

</LinearLayout>
