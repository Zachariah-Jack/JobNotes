<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- App bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        app:title="Job Notes"
        app:titleCentered="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Sticky tool rows container (white background + bottom divider) -->
    <LinearLayout
        android:id="@+id/toolRowsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Pen row -->
        <HorizontalScrollView
            android:id="@+id/scrollPenRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:overScrollMode="never">

            <LinearLayout
                android:id="@+id/rowPen"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />
        </HorizontalScrollView>

        <!-- Keyboard row (hidden until toggled) -->
        <HorizontalScrollView
            android:id="@+id/scrollKeyboardRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/rowKeyboard"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />
        </HorizontalScrollView>

        <!-- bottom divider line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/tool_divider"/>
    </LinearLayout>

    <!-- Sliding tool panel (appears under rows) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/toolPanelCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toBottomOf="@id/toolRowsContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:id="@+id/panelContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <!-- include all panels; we show/hide in code -->
            <include
                android:id="@+id/panelStylus"
                layout="@layout/panel_stylus"
                android:visibility="gone"/>

            <include
                android:id="@+id/panelHighlighter"
                layout="@layout/panel_highlighter"
                android:visibility="gone"/>

            <include
                android:id="@+id/panelEraser"
                layout="@layout/panel_eraser"
                android:visibility="gone"/>

            <include
                android:id="@+id/panelColor"
                layout="@layout/panel_color"
                android:visibility="gone"/>
        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- The canvas -->
    <com.pelicankb.jobnotes.canvas.NoteCanvasView
        android:id="@+id/noteCanvas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/toolPanelCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>
