<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:fitsSystemWindows="true"



    tools:context=".MainActivity">

    <!-- Title header: edit button + display/edit swap -->
    <LinearLayout
        android:id="@+id/titleRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:clickable="true"
        android:focusable="false"
        android:elevation="12dp"
        android:background="#E3F2FD">

        <ImageButton
            android:id="@+id/btnTitleEdit"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="6dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/edit_title"
            app:tint="@color/black"
            android:src="@drawable/ic_tool_editicon"
            android:onClick="onTitleEditClicked" />





        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp">

            <!-- Display mode -->
            <TextView
                android:id="@+id/noteTitleView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/untitled"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:singleLine="true"
                android:ellipsize="end"
                android:padding="6dp"/>

            <!-- Edit mode (hidden by default) -->
            <EditText
                android:id="@+id/noteTitleEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:singleLine="true"
                android:imeOptions="actionDone|flagNoExtractUi"
                android:privateImeOptions="disableDirectWriting=true"
                android:inputType="textCapWords|textPersonName"
                android:importantForAutofill="no"
                android:textSize="18sp"
                android:padding="8dp"
                android:hint="@string/untitled" />
        </FrameLayout>
    </LinearLayout>

    <!-- Divider above toolbar -->
    <View
        android:id="@+id/dividerToolbarTop"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#33000000" />

    <!-- Toolbar container -->
    <FrameLayout
        android:id="@+id/toolbarContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <!-- Pen menu (default visible) -->
        <LinearLayout
            android:id="@+id/panelPen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:baselineAligned="false">

            <!-- Left-most: switch to Keyboard -->
            <ImageButton
                android:id="@+id/btnKeyboardToggle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:src="@drawable/ic_tool_keyboard"
                android:onClick="onKeyboardToggleClicked"
                android:contentDescription="@null" />

            <!-- Stylus family button -->
            <ImageButton
                android:id="@+id/btnStylus"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_tool_toggle"
                android:padding="8dp"
                android:src="@drawable/ic_tool_pen"
                android:contentDescription="@string/cd_pen_tool" />

            <!-- Highlighter -->
            <ImageButton
                android:id="@+id/btnHighlighter"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_tool_toggle"
                android:padding="8dp"
                android:src="@drawable/ic_tool_highlighter"
                android:contentDescription="@null" />

            <!-- Eraser -->
            <ImageButton
                android:id="@+id/btnEraser"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_tool_toggle"
                android:padding="8dp"
                android:src="@drawable/ic_tool_eraser"
                android:contentDescription="@string/cd_eraser" />

            <!-- Select (popup) -->
            <ImageButton
                android:id="@+id/btnSelectRect"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_tool_toggle"
                android:padding="8dp"
                android:src="@drawable/ic_tool_select_rect"
                android:contentDescription="@null" />

            <!-- Undo / Redo -->
            <ImageButton
                android:id="@+id/btnUndoPen"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:src="@drawable/ic_tool_undo"
                android:contentDescription="@null" />

            <ImageButton
                android:id="@+id/btnRedoPen"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:src="@drawable/ic_tool_redo"
                android:contentDescription="@null" />

            <!-- Color chips (Pen menu only) -->
            <LinearLayout
                android:id="@+id/groupPenChips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="4dp">

                <ImageButton
                    android:id="@+id/chipColor1"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/bg_color_chip_selector"
                    android:padding="6dp"
                    android:src="@drawable/ic_tool_color"
                    app:tint="#000000"
                    android:contentDescription="@null" />

                <ImageButton
                    android:id="@+id/chipColor2"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/bg_color_chip_selector"
                    android:padding="6dp"
                    android:src="@drawable/ic_tool_color"
                    app:tint="#FFD54F"
                    android:contentDescription="@null" />

                <ImageButton
                    android:id="@+id/chipColor3"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/bg_color_chip_selector"
                    android:padding="6dp"
                    android:src="@drawable/ic_tool_color"
                    app:tint="#2196F3"
                    android:contentDescription="@null" />
            </LinearLayout>

            <!-- Spacer -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <!-- Right-side actions (Pen) -->
            <LinearLayout
                android:id="@+id/groupEditActions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnClear"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    android:src="@drawable/ic_tool_clear"
                    android:contentDescription="@null" />

                <ImageButton
                    android:id="@+id/btnCopy"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/ic_tool_copy"
                    android:contentDescription="@null" />

                <ImageButton
                    android:id="@+id/btnCut"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/ic_tool_cut"
                    android:contentDescription="@null" />

                <ImageButton
                    android:id="@+id/btnPaste"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/ic_tool_paste"
                    android:contentDescription="@null" />

                <!-- New: hand, camera, gallery, overflow -->
                <ImageButton
                    android:id="@+id/btnHandPen"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    android:layout_marginStart="6dp"
                    android:src="@drawable/ic_tool_hand"
                    android:contentDescription="@null" />

                <ImageButton
                    android:id="@+id/btnCameraPen"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/ic_tool_camera"
                    android:contentDescription="@null" />

                <ImageButton
                    android:id="@+id/btnGalleryPen"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/ic_tool_gallery"
                    android:contentDescription="@null" />

                <ImageButton
                    android:id="@+id/btnOverflowPen"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/ic_up_arrow"
                    android:contentDescription="@null" />
            </LinearLayout>
        </LinearLayout>

        <!-- Keyboard menu (hidden initially) -->
        <LinearLayout
            android:id="@+id/panelKeyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:baselineAligned="false">

            <ImageButton
                android:id="@+id/btnPenToggle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:src="@drawable/ic_tool_pen_toggle"
                android:onClick="onPenToggleClicked"
                android:contentDescription="@null" />

            <ImageButton
                android:id="@+id/btnText"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:src="@drawable/ic_kbd_text"
                android:contentDescription="@null" />

            <ImageButton
                android:id="@+id/btnTextColor"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:src="@drawable/ic_kbd_text_color"
                android:contentDescription="@null" />

            <ImageButton
                android:id="@+id/btnTextBg"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:src="@drawable/ic_kbd_text_bg"
                android:contentDescription="@null" />

            <ImageButton
                android:id="@+id/btnCheckbox"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:src="@drawable/ic_kbd_checkbox"
                android:contentDescription="@null" />

            <!-- Undo / Redo -->
            <ImageButton
                android:id="@+id/btnUndoKbd"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:src="@drawable/ic_tool_undo"
                android:contentDescription="@null" />

            <ImageButton
                android:id="@+id/btnRedoKbd"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:src="@drawable/ic_tool_redo"
                android:contentDescription="@null" />

            <!-- Spacer -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <!-- New: hand, camera, gallery, overflow (Keyboard panel) -->
            <ImageButton
                android:id="@+id/btnHandKbd"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:src="@drawable/ic_tool_hand"
                android:contentDescription="@null" />

            <ImageButton
                android:id="@+id/btnCameraKbd"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:layout_marginStart="2dp"
                android:src="@drawable/ic_tool_camera"
                android:contentDescription="@null" />

            <ImageButton
                android:id="@+id/btnGalleryKbd"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:layout_marginStart="2dp"
                android:src="@drawable/ic_tool_gallery"
                android:contentDescription="@null" />

            <ImageButton
                android:id="@+id/btnOverflowKbd"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:layout_marginStart="2dp"
                android:src="@drawable/ic_up_arrow"
                android:contentDescription="@null" />
        </LinearLayout>
    </FrameLayout>

    <!-- Divider below toolbar -->
    <View
        android:id="@+id/dividerToolbarBottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33000000" />

    <!-- Canvas host -->
    <FrameLayout
        android:id="@+id/canvasHost"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_weight="1"
        android:background="#EFEFF2">

        <com.pelicankb.jobnotes.drawing.InkCanvasView
            android:id="@+id/inkCanvas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:contentDescription="@string/cd_canvas" />

    </FrameLayout>
</LinearLayout>
