        <!-- You can still customize your Material colors here if you want -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <!-- Alias theme actually used by your activities -->
    <style name="Theme.JobNotes" parent="Base.Theme.JobNotes" />
</resources>
